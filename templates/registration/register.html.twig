{% extends 'base.html.twig' %}

{% block title %}Pralipom√®nes - Inscription
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	
	<div class = "form-reg eagle">
    <h2 class="texte-rouge">Inscription</h2>
		{{ form_errors(registrationForm) }}
		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.email, 
            {label: "Email (requis)"}) }}
        {{ form_row(registrationForm.username, 
            {label: "Nom d'utilisateur (optionel) " })}}
		{{ form_row(registrationForm.plainPassword, 
            {label: 'Mot de passe (requis)'}) }}
		{{ form_row(registrationForm.agreeTerms)}}
		<button type="submit" class="fond-rouge texte-beige eagle">S'inscrire</button>
	{{ form_end(registrationForm) }}
	</div>
{% endblock %}
