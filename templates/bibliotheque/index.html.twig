{% extends 'base.html.twig' %}

{% block title %}Paralipomènes - Bibliothèques{% endblock %}

{% block body %}

	{% for hist in histoires %}
			
			<a class="carte-biblio texte-rouge fond-beige" href= "{{path('app_page_histoire',{id: hist.id})}}">	
				<h4 class="lavish">{{hist.titre}}</h4>
				<div class="eagle">
				{% for ch in hist.chapitres|reverse %}
						<br>
						{{ch.contenu|raw}}
				{% endfor %}
				</div>
                <p class="eagle date-biblio">Publié le : {{hist.datePublication|date('d-m-Y')}}</p>
			</a>	
			
		{% endfor %}

{% endblock %}
