{% extends 'base.html.twig' %}

{% block title %}Paralipomènes - Bibliothèques{% endblock %}

{% block body %}

	{% for hist in histoires %}

			<div class="carte-biblio texte-rouge fond-beige">
				<h4 class="lavish">{{hist.titre}}</h4>
				<div class="eagle">
				{% for ch in hist.chapitres %}
						{{ch.contenu|raw}}
				{% endfor %}
				</div>
                <p class="eagle date-biblio">Publié le : {{hist.datePublication|date('d-m-Y')}}</p>
			</div>

		{% endfor %}



{% endblock %}
